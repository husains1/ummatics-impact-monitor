# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=ummatics_monitor
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here

# Dashboard Authentication
DASHBOARD_PASSWORD=your_secure_dashboard_password_here

# Google Alerts Configuration
# Create alert at https://www.google.com/alerts
# Choose "RSS feed" as delivery method
GOOGLE_ALERTS_RSS_URL=https://www.google.com/alerts/feeds/YOUR_FEED_ID_HERE/YOUR_USER_ID_HERE

# Twitter API Configuration
# Get credentials from https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_USERNAME=ummatics

# Google Analytics 4 Configuration
# Find Property ID in GA4 Admin > Property Settings
GA4_PROPERTY_ID=123456789
# Path to service account JSON credentials file
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/google-credentials.json

# OpenAlex API Configuration
# Optional: Your organization's ROR ID from https://ror.org/
# If not provided, will search by organization name
OPENALEX_ROR_ID=

# Contact Information
# Used for polite API access (OpenAlex requirement)
CONTACT_EMAIL=

# Optional: Flask Debug Mode (set to False in production)
FLASK_DEBUG=False
